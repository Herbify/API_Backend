datasource db {
    provider = "mysql"
    // mysql://username:password@localhost:port/database
    url      = "mysql://root:@localhost:3306/herbify"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id    Int    @id @default(autoincrement())
    name  String
    email String @unique
}

model Articles {
    id        Int      @id @default(autoincrement())
    idUser    Int
    title     String
    photo     String?
    content   String
    tag       Json?
    createdAt DateTime @default(now())
    updatedAt DateTime 
}

model products {
    id         Int      @id @default(autoincrement())
    name       String
    ingredient Json
    price      Int
    location   String
    url        String?
    photo      String
    createdAt  DateTime @default(now())
    updatedAt  DateTime 
}

model userActivities {
    id        Int      @id @default(autoincrement())
    userId    Int
    type      String
    activity  Json
    status    Int
    createdAt DateTime @default(now())
    updatedAt DateTime 
}
