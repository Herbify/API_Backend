model User {
    id         Int       @id @default(autoincrement())
    name       String
    photo      String?
    email      String    @unique
    password   String
    status     Int       @default(0)
    verifiedAt DateTime?
    createdAt  DateTime  @default(now())
    updatedAt  DateTime  @updatedAt
    Otp        Otp[]
}

model Otp {
    id        Int      @id @default(autoincrement())
    code      Int?
    userId    Int
    expiredAt DateTime
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    user      User     @relation(fields: [userId], references: [id])
}

model Herbal {
    id             Int      @id @default(autoincrement())
    name           String
    scientificName String?
    image          String?
    description    String?
    benefit        String?
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt
}
